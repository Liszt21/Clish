#!/bin/sh
#|-*- mode:lisp -*-|#
#|
exec ros -Q -- $0 "$@"
|#
(progn ;;init forms
  (ros:ensure-asdf)
  #+quicklisp
  (ql:quickload :uiop :silent t)
  (asdf:load-asd (eval `(or ,@(mapcar (lambda (folder)
                                        (probe-file (concatenate 'string folder "/clish.asd")))
                                      (list "." ".." (uiop:getenv "CLISH"))))))
  (ql:quickload :clish :silent t))

(defpackage :ros.script.clish
  (:use :cl))
(in-package :ros.script.clish)

(defun main (&rest argv)
  (declare (ignorable argv))
  (apply #'clish:cli argv))
